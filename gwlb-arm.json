{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
    "contentVersion": "1.3.1.0",
    "parameters": {
      "agwLoadBalancerName": {
        "defaultValue": "MyGatewayLoadBalancer",
        "metadata": {
          "description": "Specifying a name creates a azure gateway load balancer with the name specified. A value of '' will not create azure gateway load balancer."
        },
        "type": "string"
      },
      "frontendSubnetId": {
        "defaultValue": "",
        "metadata": {
          "description": "Enter subnet id to use for frontend azure gateway or internal load balancer configuration. If you do not specify an azure gateway or internal loadbalancer name to provision a load balancer, this setting has no effect."
        },
        "type": "string"
      }
    },
    "variables": {
      "agwloadBalancerName": "[if(not(empty(parameters('agwLoadBalancerName'))), parameters('agwLoadBalancerName'), string('agwloadBalancer'))]",
      "agwloadBalancerPrivateAddressVersion": "IPv4",
      "agwloadBalancerPrivateIPAllocationMethod": "Dynamic",
      "providerLbID": "[resourceId('Microsoft.Network/loadBalancers',parameters('agwLoadBalancerName'))]",
      "providerFeipName": "myGWLBFrontEnd",
      "probeName": "httpProbe80"
    },
    "resources": [
      {
        "apiVersion": "2021-03-01",
        "type": "Microsoft.Network/loadBalancers",
        "condition": "[not(empty(parameters('agwLoadBalancerName')))]",
        "name": "[variables('agwLoadBalancerName')]",
        "location": "[resourceGroup().location]",
        "sku": {
          "name": "Gateway"
        },
        "properties": {
          "frontendIPConfigurations": [
            {
              "name": "[variables('providerFeipName')]",
              "properties": {
                "privateIPAddressVersion": "[variables('agwloadBalancerPrivateAddressVersion')]",
                "privateIPAllocationMethod": "[variables('agwloadBalancerPrivateIPAllocationMethod')]",
                "subnet": {
                  "id": "[parameters('frontendSubnetId')]"
                }
              }
            }
          ],
          "backendAddressPools": [
            {
              "name": "BackendPool1",
              "properties": {
                "tunnelInterfaces": [
                  {
                    "port": 2002,
                    "Identifier": 802,
                    "Protocol": "VxLan",
                    "Type": "Internal"
                  },
                  {
                    "port": 2001,
                    "Identifier": 801,
                    "Protocol": "VxLan",
                    "Type": "External"
                  }
                ]
              }
            }
          ],
          "loadBalancingRules": [
            {
              "name": "LbRule1",
              "properties": {
                "frontendIPConfiguration": {
                  "id": "[concat(variables('providerLbID'),'/frontendIPConfigurations/',variables('providerFeipName'))]"
                },
                "backendPort": 0,
                "frontendPort": 0,
                "protocol": "All",
                "enableHighAvailability": true,
                "BackendAddressPools": [
                  {
                    "id": "[concat(variables('providerLbID'),'/backendAddressPools/BackendPool1')]"
                  }
                ],
                "probe": {
                  "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('agwLoadBalancerName')), '/probes/', variables('probeName'))]"
                }
              }
            }
          ],
          "probes": [
            {
              "name": "[variables('probeName')]",
              "properties": {
                "intervalInSeconds": 5,
                "numberOfProbes": 2,
                "port": "80",
                "protocol": "Http",
                "requestPath": "/healthcheck"
              }
            }
          ]
        }
      }
    ],
    "outputs": {
      "agwBackEndLoadBalancerId": {
        "condition": "[not(empty(parameters('agwLoadBalancerName')))]",
        "type": "string",
        "value": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('agwLoadBalancerName')), '/backendAddressPools/BackendPool1')]"
      },
      "agwFrontEndLoadBalancerId": {
        "condition": "[not(empty(parameters('agwLoadBalancerName')))]",
        "value": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('agwLoadBalancerName')), '/frontendIPConfigurations/',variables('providerFeipName'))]",
        "type": "string"
      },
      "agwLoadBalancer": {
        "condition": "[not(empty(parameters('agwLoadBalancerName')))]",
        "type": "string",
        "value": "[resourceId('Microsoft.Network/loadBalancers', parameters('agwLoadBalancerName'))]"
      },
      "agwFrontEndIP": {
        "condition": "[not(empty(parameters('agwLoadBalancerName')))]",
        "type": "string",
        "value": "[reference(concat(resourceId('Microsoft.Network/loadBalancers', parameters('agwLoadBalancerName')), '/frontendIPConfigurations/', variables('providerFeipName')), '2021-03-01').privateIPAddress]"

      }
    }
  }